{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

<div class="container-form-forget">
    <h1>Mot de passe oublié</h1>

    {{ form_start(resetForm, {'attr' : {'class': 'form-forget uk-box-shadow-small uk-animation-slide-right'}}) }}
        {{ form_row(resetForm.email) }}
        <button class="uk-button uk-button-primary" type="submit">Valider</button>
    {{ form_end(resetForm) }}
</div>
  

{% endblock %}
